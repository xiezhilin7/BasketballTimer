<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="540dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="3dp"
        android:background="@color/upload_content_txt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="开始"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="暂停"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clean_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="24S计时"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clean_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="14S计时"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/all_function_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:textStyle="bold" />


        </LinearLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/text_minute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="10:00"
        android:textColor="@color/white"
        android:textSize="480dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/text_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_minute"
        android:layout_marginTop="-130dp"
        android:gravity="top|center_horizontal"
        android:includeFontPadding="false"
        android:text="24"
        android:textColor="@color/white"
        android:textSize="550dp"
        android:textStyle="bold" />


</RelativeLayout>